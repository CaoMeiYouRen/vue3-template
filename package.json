{
  "name": "vue3-template",
  "version": "0.1.0",
  "private": true,
  "author": "CaoMeiYouRen",
  "license": "MIT",
  "scripts": {
    "dev": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "cross-env NODE_ENV=production eslint src --fix --ext .js,.ts,.vue && npm run lint:css",
    "lint:css": "stylelint src/**/*.{vue,html,css,scss,sass} --syntax scss --custom-syntax postcss-html --fix"
  },
  "dependencies": {
    "core-js": "^3.16.1",
    "lodash": "^4.17.21",
    "normalize.css": "^8.0.1",
    "vue": "^3.2.2",
    "vue-composable": "^1.0.0-beta.23",
    "vue-router": "^4.0.11",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.172",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.2",
    "@vue/cli-plugin-babel": "^4.5.13",
    "@vue/cli-plugin-eslint": "^4.5.13",
    "@vue/cli-plugin-router": "^4.5.11",
    "@vue/cli-plugin-typescript": "^4.5.13",
    "@vue/cli-plugin-vuex": "^4.5.13",
    "@vue/cli-service": "^4.5.13",
    "@vue/compiler-sfc": "^3.2.3",
    "@vue/eslint-config-typescript": "^7.0.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.32.0",
    "eslint-config-cmyr": "^1.0.10",
    "eslint-plugin-vue": "^7.16.0",
    "lint-staged": "^11.1.2",
    "sass": "^1.38.0",
    "sass-loader": "^10.1.1",
    "stylelint": "^13.13.1",
    "stylelint-config-cmyr": "^0.2.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.20.1",
    "stylelint-webpack-plugin": "^3.0.1",
    "typescript": "^4.3.5"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
